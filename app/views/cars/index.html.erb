
  <% if session[:admin_id]  %>

  <body>
 <%= render 'layouts/header' %>

   

       <div class="page-wrapper" style="min-height: 785px;">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h4 class="text-themecolor">Cars</h4>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Home</a>
                                </li>
                                <li class="breadcrumb-item active">Cars</li>
                            </ol>
                            <button type="button" class="btn btn-info d-none d-lg-block m-l-15" onclick="myFunction()">
                                <i class="fa fa-plus-circle"></i> Add Cars</button>
                        </div>
                    </div>

                    <script>
function myFunction() {
    window.location.replace("/cars/new");
}
</script>
                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Cars Listing</h4>
                   
                                <div class="table-responsive m-t-40">
                                    <div id="example23_wrapper" class="dataTables_wrapper dt-bootstrap4">

                                    


                                          <table id="example23" class="display nowrap table table-hover table-striped table-bordered dataTable" cellspacing="0" width="100%" role="grid" aria-describedby="example23_info" style="width: 100%;">
                                        <thead>
                                        <tr><th class="sorting_asc" tabindex="0" aria-controls="example23" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 171px;">ID</th><th rowspan="1" colspan="1">Brand</th><th rowspan="1" colspan="1">Model</th><th rowspan="1" colspan="1">Year</th><th rowspan="1" colspan="1">Mileage</th><th rowspan="1" colspan="1">Condition</th><th rowspan="1" colspan="1">Damages</th><th rowspan="1" colspan="1"></th><th rowspan="1" colspan="1"></th></tr>
                                        </thead>
                                     
                                        <tbody>
                                
                                            
                           
                                  
    

           <% @cars.each do |car| %>
                                            
                                        <tr role="row" class="odd">
                                            <td class="sorting_1"><%= car.id %></td>
                                            <td><%= Brand.find(car.brand).name %></td>
                                                  <td><%= CarModel.find(car.model).name %></td>
        <td><%= car.year %></td>
        <td><%= Millage.find(car.mileage).range %></td>
        <td><%= car.condition %></td>
        <td><%= car.damages %></td>
                                               
                              
                                                 <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                            </tr>
 <% end %>



                                        </tbody>
                                    </table>

                                </div>
                                </div>
                            </div>
                        </div>
                  
                    </div>
                </div>

            </div>
